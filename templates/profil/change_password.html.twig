{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .profil {
        margin-top: 10%;
        margin-left: 30%;
    }
</style>
<div class="profil">
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-body">
                    {% for flash_message in app.session.flashbag.get('danger') %}
                        <div class="container alert alert-danger p-2" role="alert">
                          {{ flash_message }}
                        </div>
                    {% endfor %}
                    <form method="POST"  class="needs-validation" novalidate>                  
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example2">Nouveau Password</label>
                            <input type="password" class="form-control is-valid"  name="mdp1" id="myInput1" required maxlength="14" minlength="8" />      
                            <div class="invalid-feedback">Ce champs est obligatoire.</div>

                        </div>                   
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form2Example2">Confirmer le mot de passe</label>
                            <input type="password" class="form-control is-valid" name="mdp2" id="myInput2" required maxlength="14" minlength="8"/>    
                            <div class="invalid-feedback">Ce champs est obligatoire.</div>
                        </div>            
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-info btn-sm btn-block mb-4">Modifier</button>      
                    </form>                    
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (() => {
        'use strict';
    
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        const forms = document.querySelectorAll('.needs-validation');
    
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach((form) => {
        form.addEventListener('submit', (event) => {
            if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
        });
    })();
</script>
{% endblock %}
