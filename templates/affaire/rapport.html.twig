{% extends 'base.html.twig' %}

{% block title %}Affaire index{% endblock %}

{% block body %}
<div class="page-title">
    <div class="title_left">
    <h3>Rapports</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Listes des rapports</h2>
            <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                <thead class="table-primary">
                                    <tr>
                                    <th width="2">N°</th>
                                    <th>N° Affaire JE</th>
                                    <th>Nom Client</th>
                                    <th>Référence code client</th>
                                    <th>N° de fabrication</th>
                                    <th>N° d'article client</th>
                                    <th>Affaire suivie par</th>
                                    <th>Date prévisionnelle de livraison</th>
                                    <th width="100" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for affaire in affaires %}
                                    <tr>
                                        <td>1</td>
                                        <td>{{ affaire.numAffaire }}</td>
                                        <td>{{ affaire.client }}</td>
                                        <td>{{ affaire.codeClient }}</td>
                                        <td>{{ affaire.numFabrication }}</td>
                                        <td>{{ affaire.numArticleClient }}</td>
                                        <td>{{ affaire.suiviPar }}</td>
                                        <td>{{ affaire.dateLivraison ? affaire.dateLivraison|date('Y-m-d') : '' }}</td>
                                        <td class="text-center">
                                            <a href="#" class="btn btn-outline-secondary btn-sm p-2">Imprimer <i class="fa fa-print p-1"></i></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="13">Pas d'affaire  terminer</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
