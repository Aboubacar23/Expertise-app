{% extends 'base.html.twig' %}

{% block title %}Affaire index{% endblock %}

{% block body %}
<div class="page-title">
    <div class="title_left">
    <h3>Gestion Affaires</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
        <h2>Listes des affaires</h2>
        <div class="clearfix"></div>
        </div>
        <div class="x_content">
        <div class="row">
            <div class="col-sm-12">
            <div class="card-box table-responsive">
                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                    <thead class="table-primary">
                        <tr>
                        <th width="2">N°</th>
                        <th>N° Affaire JE</th>
                        <th>Nom Client</th>
                        <th>Type Machine</th>
                        <th>Suivi Par</th>
                        <th>Reunion Enc</th>
                        <th>Date d'arrivée</th>
                        <th>Expertise Méca</th>
                        <th>Expertise Elec</th>
                        <th>Remise Rapport Expertise</th>
                        <th>Reunion Validation</th>
                        <th>Remontage</th>
                        <th>Fin Essais Finaux</th>
                        <th>Date livraison</th>
                        <th>Commentaires</th>
                        <th width="150" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for affaire in affaires %}
                        <tr>
                            <td>1</td>
                            <td>{{ affaire.numAffaire }}</td>
                            <td>{{ affaire.client }}</td>
                            <td>Machine Type</td>
                            <td>{{ affaire.suiviPar }}</td>
                            <td class="text-center green">OK</td>
                            <td>2011/04/25</td>
                            <td class="text-center"><i class="fa fa-circle fa-10x green"></i></td>
                            <td class="text-center"><i class="fa fa-circle fa-10x green"></i></td>
                            <td class="text-center"><i class="fa fa-circle fa-10x green"></i></td>
                            <td class="text-center green">OK</td>
                            <td class="text-center"><i class="fa fa-circle fa-10x green"></i></td>
                            <td class="text-center"><i class="fa fa-circle fa-10x green"></i></td>
                            <td>{{ affaire.dateLivraison ? affaire.dateLivraison|date('Y-m-d') : '' }}</td>
                            <td>mon commentaire</td>
                            <td class="text-center">
                                <a href="{{path('app_affaire_show', {'id' : affaire.id })}}" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                                <a href="{{path('app_affaire_edit', {'id' : affaire.id })}}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="13">Pas d'affaire dans le système</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
