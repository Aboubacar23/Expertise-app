{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Synoptique de démontage</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_synoptique',{'id' : synoptique.parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                    <div class="row">
                        {% for flash_message in app.session.flashbag.get('message') %}
                            <div class="container alert alert-danger p-2 ml-5 mr-5 mt-2" role="alert">
                                {{ flash_message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="x_content">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="item form-group">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th class="text-center table-secondary">Repère</th>
                                            <th class="text-center table-secondary">Type</th>
                                            <th width="20px"></th>
                                        </tr>
                                        <tr>
                                            <td>{{ form_widget(form.repere) }}</td>
                                            <td>{{ form_widget(form.type) }}</td>
                                            <td><button class="btn btn-primary btn-sm" type="submit">Modifier</button></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
