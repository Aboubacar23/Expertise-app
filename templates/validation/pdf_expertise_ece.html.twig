    .table_sous_page_6_2,
    .tr_table_sous_page_6_2 {
        font-size: 11px !important;
    }

    .th_table_sous_page6_2 {
        width: 20% !important;
    }

    .td_image {
        text-align: center;
    }

    .sous_menu1 {
        padding-left: 20px;
