{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Contrôles de bobinages</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_electrique_avant_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                </div>  
                <div class="x_content">
                    {{ form_start(formControleBobinage) }}
                        <div class="row">
                            <table class="table table-bordered">
                                <tr class="table-primary">
                                    <th>Nature du contrôle</th>
                                    <th>Conformité</th>
                                    <th>Préconisation</th>
                                    <th>Retenu</th>
                                </tr>
                                <tr>
                                    <th class="table-primary">Contrôle calage des encoches</th>
                                    <td>{{ form_widget(formControleBobinage.conformite1) }}</td>
                                    <td>{{ form_widget(formControleBobinage.preconisation1) }}</td>
                                    <td>{{ form_widget(formControleBobinage.retenu1) }}</td>
                                </tr>
                                <tr>
                                    <th class="table-primary">Contrôle laçage des développantes</th>
                                    <td>{{ form_widget(formControleBobinage.conformite2) }}</td>
                                    <td>{{ form_widget(formControleBobinage.preconisation2) }}</td>
                                    <td>{{ form_widget(formControleBobinage.retenu2) }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-6 text-left">
                                <button class="btn btn-secondary btn-sm" name="bouton3" value="controle_bobinage_en_cours"> En cours <i class="fa fa-save"></i></button>
                            </div>
                            <div class="col-md-6 text-right">
                                <button class="btn btn-success btn-sm" name="bouton3" value="controle_bobinage_terminer"> Terminer <i class="fa fa-save"></i></button>
                            </div>
                        </div>
                    {{ form_end(formControleBobinage) }}
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
