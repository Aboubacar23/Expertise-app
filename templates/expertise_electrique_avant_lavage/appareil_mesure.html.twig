{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Appareil de Mesure</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_electrique_avant_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                    <div class="row">
                        {% for flash_message in app.session.flashbag.get('message') %}
                            <div class="container alert alert-danger p-2 ml-5 mr-5 mt-2" role="alert">
                                {{ flash_message }}
                            </div>
                        {% endfor %}
                    </div>
                </div>  
                <div class="x_content">
                    <div class="row">
                        <table class="table table-bordered">
                            {{ form_start(formAppareilMesure) }}
                                <tr class="table-primary">
                                    <th colspan="4" class="text-center">Appareils de Mesures</th>
                                </tr>
                                <tr>
                                    <td>{{ form_widget(formAppareilMesure.appareil) }}</td>
                                    <td width="100"><button class="btn btn-primary btn-sm" name="bouton6" value="ajouter"> Ajouter</button></td>
                                </tr>
                            {{ form_end(formAppareilMesure) }}
                            
                            {% if parametre.appareilMesures %}
                                {% for item in parametre.appareilMesures %}
                                    <tr>
                                        <td>{{item.appareil.designation}}</td>
                                        <td>{{item.appareil.numAppareil}}</td>
                                        <td>{{item.appareil.dateValidite | date('Y-m-d')}}</td>
                                        <td><a href="{{path('delete_appareil', {'id' : item.id })}}" onclick="return confirm('Voulez-vous valider ?')"><i class="fa fa-trash fa-2x text-danger"></i></a></td>
                                    </tr>
                                {% endfor %}                                      
                            {% endif %}
                        </table>   
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
