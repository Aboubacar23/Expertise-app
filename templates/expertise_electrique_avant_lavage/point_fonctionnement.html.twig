{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Point de fonctionnement à vide</h4></div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_electrique_avant_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                </div> 
                <div class="x_content">
                    {{ form_start(formPointFonctionnement) }}
                        <div class="row">
                            <table class="table table-bordered">
                                <tr>
                                    <td>{{ form_widget(formPointFonctionnement.observation) }}</td>                                    
                                    <td><button class="btn btn-primary btn-sm" name="bouton9" value="ajouter"> Ajouter <i class="fa fa-plus"></i></button></td>
                                </tr>
                            </table>
                        </div>
                    {{ form_end(formPointFonctionnement) }}
                    
                    <div class="row table-responsive">
                        <table class="table table-bordered">
                            <tr class="table-primary text-center">
                                <th width="2%">t</th>
                                <th>U</th>
                                <th>I1</th>
                                <th>I2</th>
                                <th>I3</th>
                                <th>P</th>
                                <th>Q</th>
                                <th>cos</th>
                                <th>N</th>
                                <th>I</th>
                                <th>TAmb</th>
                                <th>CA</th>
                                <th>COA</th>
                                <th rowspan="2">Observation</th>
                                <th rowspan="2"></th>
                            </tr>
                            <tr class="table-primary">
                                <th class="text-center">(min)</th>
                                <th class="text-center">(V)</th>
                                <th class="text-center">(A)</th>
                                <th class="text-center">(A)</th>
                                <th class="text-center">(A)</th>
                                <th class="text-center">(kW)</th>
                                <th class="text-center">(kVAR)</th>
                                <th class="text-center">cos</th>
                                <th class="text-center">(tr/min)</th>
                                <th class="text-center">(A)</th>
                                <th class="text-center">(°C)</th>
                                <th class="text-center">(°C)</th>
                                <th class="text-center">(°C)</th>
                            </tr>
                            {% for item in parametre.pointFonctionnements %}
                                <tr>
                                    <td class="text-center">{{item.t}}</td>
                                    <td class="text-center">{{item.u}}</td>
                                    <td class="text-center">{{item.i1}}</td>
                                    <td class="text-center">{{item.i2}}</td>
                                    <td class="text-center">{{item.i3}}</td>
                                    <td class="text-center">{{item.p}}</td>
                                    <td class="text-center">{{item.q}}</td>
                                    <td class="text-center">{{item.cos}}</td>
                                    <td class="text-center">{{item.n}}</td>
                                    <td class="text-center">{{item.i}}</td>
                                    <td class="text-center">{{item.tamb}}</td>
                                    <td class="text-center">{{item.ca}}</td>
                                    <td class="text-center">{{item.coa}}</td>
                                    <td class="text-center">{{item.observation}}</td>
                                    <td class="text-center"><a href="{{path('delete_point_fonctionnement', {'id' : item.id })}}" onclick="return confirm('Voulez-vous valider ?')"><i class="fa fa-trash fa-2x text-danger"></i></a></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
