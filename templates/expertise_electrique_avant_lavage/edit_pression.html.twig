{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h4>Expertise Électrique avant lavage du projet {{ parametre.affaire.numAffaire }}</h4>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Autres Contrôles</h5>
                            </div>
                            <div class="col-md-6">
                                <ul class="nav navbar-right panel_toolbox">
                                    <a href="{{path('app_expertise_electrique_avant_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                    <!-- début Autres contôles -->
                    {{ form_start(form) }}
                    <div class="x_content">
                        <div class="row">
                            <table class="table table-bordered">
                                <tr  class="table-secondary">
                                    <th colspan="5" class="text-center">Balais</th>
                                </tr>
                                <tr  class="table-secondary">
                                    <th>Contrôle</th>
                                    <th>Critère</th>
                                    <th>relevé</th>
                                    <th>Conformité</th>
                                </tr>
                                <tr>
                                    <td>Pression des balais</td>
                                    <td>{{ form_widget(form.critere) }}</td>
                                    <td>{{ form_widget(form.preconisation) }}</td>
                                    <td>{{ form_widget(form.conformite) }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-6 text-left">
                                <button class="btn btn-secondary btn-sm" name="bouton4" value="autre_controle_en_cours"> En cours <i class="fa fa-save"></i></button>
                            </div>
                            <div class="col-md-6 text-right">
                                <button class="btn btn-success btn-sm" name="bouton4" value="autre_controle_terminer"> Terminer <i class="fa fa-save"></i></button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <!-- /fin Autres contôles -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
