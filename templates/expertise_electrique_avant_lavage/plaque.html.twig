{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Plaque Signalérique et Révision</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_electrique_avant_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                </div>
            </div>

            <div class="x_panel"> 
                <div class="x_content" id="collapse02">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="item form-group">
                                    <table class="table table-bordered">
                                        <tr class="table-secondary">
                                            <th class="text-center">Service</th>
                                            <th class="text-center">Classe Isolation</th>
                                            <th class="text-center">Indice de Protection</th>
                                            <th width="20px"></th>
                                        </tr>
                                        <tr>
                                            <td>{{ form_widget(form.service) }}</td>
                                            <td>{{ form_widget(form.classe_isolation) }}</td>
                                            <td>{{ form_widget(form.indice_protection) }}</td>
                                            <td><button class="btn btn-primary btn-sm" type="submit">Ajouter</button></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <div class="x_panel">
                <div class="x_content">
                    <div class="row">
                        {% for flash_message in app.session.flashbag.get('message') %}
                            <div class="container alert alert-danger p-2 ml-5 mr-5 mt-2" role="alert">
                                {{ flash_message }}
                            </div>
                        {% endfor %}
                    </div>
                    {{ form_start(formPlaque) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="item form-group">
                                    <table class="table table-bordered">
                                        <tr class="table-secondary">
                                            <th class="text-center">Libelle</th>
                                            <th class="text-center">Photo</th>
                                            <th width="20px"></th>
                                        </tr>
                                        <tr>
                                            <td>{{ form_widget(formPlaque.libelle) }}</td>
                                            <td>{{ form_widget(formPlaque.photo) }}</td>
                                            <td><button class="btn btn-primary btn-sm" type="submit">Ajouter</button></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {{ form_end(formPlaque) }}

                    {% if parametre.plaques %}
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered">
                                    <tbody>
                                        <tr>
                                            {% for item in parametre.plaques %}
                                                <td><img src="{{asset('/photo_plaque/' ~ item.photo)}}" height="200"/></td>
                                            {% endfor %}
                                        </tr>    
                                        <tr>                                                
                                        {% for item in parametre.plaques %}
                                            <td>{{item.libelle}}</td>
                                        {% endfor %}
                                        </tr>      
                                        <tr>                                                
                                        {% for item in parametre.plaques %}
                                            <td><a class="btn btn-danger bnt-sm" href="{{path('app_delete_plaque', {'id' : item.id })}}" onclick="return confirm('Voulez-vous confirmer ?')"><i class="fa fa-trash-o fa-1x text-white"></i></a></td>
                                        {% endfor %}
                                        </tr>                                              
                                    </tbody>
                                </table>
                            </div>
                        </div> 
                    {% endif %}
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
