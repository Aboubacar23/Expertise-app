{% extends 'base.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h3>Expertise du projet</h3>
        </div>
    </div>
    <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2 class="text-right">
                            <strong class="pull-right">Détail de la Machine : 
                                {{ type.machine }}
                            </strong></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <a href="#" onclick="history.back();" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                        </ul>
                        <div class="clearfix"></div> 
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Machine</h5>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th>Type Machine</th>
                                                <td>{{ type.typeMachine }}</td>
                                                <th>Puissance</th>
                                                <td>{{ type.puissance }} KW</td>
                                            </tr>
                                            <tr>
                                                <th>Fabricant</th>
                                                <td>{{ type.fabricant }}</td>
                                                <th>Montage</th>
                                                <td>{{ type.montage }}</td>
                                            </tr>
                                            <tr>
                                                <th>Vitesse</th>
                                                <td>{{ type.vitesse }} tr/min</td>
                                                <th>Masse</th>
                                                <td>{{ type.masse }} KG</td>
                                            </tr>
                                            <tr>
                                                <th>Presence Balais</th>
                                                <td>{{ type.presenceBalais ? 'Oui' : 'Non' }}</td>
                                                <th>Presence Balais Masse</th>
                                                <td>{{ type.presenceBalaisMasse ? 'Oui' : 'Non' }}</td>
                                            </tr>
                                            <tr>
                                                <th>Type Palier</th>
                                                <td>{{ type.typePalier }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <h5>Stator</h5>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th>Stator Tension</th>
                                                <td>{{ type.statorTension }} V</td>
                                            </tr>
                                            <tr>
                                                <th>Stator Frequence</th>
                                                <td>{{ type.statorFrequence }}</td>
                                            </tr>
                                            <tr>
                                                <th>Stator Courant</th>
                                                <td>{{ type.statorCourant }} A</td>
                                            </tr>
                                            <tr>
                                                <th>Stator Couplage</th>
                                                <td>{{ type.statorCouplage }}</td>
                                            </tr>
                                            <tr>
                                                <th>Date Arrivée</th>
                                                <td>{{ type.dateArrivee ? type.dateArrivee|date('d-m-Y') : '' }}</td>
                                            </tr>
                                            <tr>
                                                <th>Stator Tension 2</th>
                                                <td>{{ type.statorTension2 }} V</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <h5>Rotor</h5>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th>Rotor Tension</th>
                                                <td>{{ type.rotorTension }} V</td>
                                            </tr>
                                            <tr>
                                                <th>Rotor Expertise Refrigeant</th>
                                                <td>{{ type.rotorExpertiseRefrigeant }}</td>
                                            </tr>
                                            <tr>
                                                <th>Rotor Courant</th>
                                                <td>{{ type.rotorCourant }} A</td>
                                            </tr>
                                            <tr>
                                                <th>Presence Plans</th>
                                                <td>{{ type.presencePlans ? 'Oui' : 'Non' }}</td>
                                            </tr>
                                            <tr>
                                                <th>Rotor Tension 2</th>
                                                <td>{{ type.rotorTension2}} V</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
