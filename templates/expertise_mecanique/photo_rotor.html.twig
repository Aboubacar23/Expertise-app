{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Photo Rotor</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_mecanique',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                </div>                
                <div class="x_content">
                    {% for flash_message in app.session.flashbag.get('danger') %}
                        <div class="container danger alert-danger p-2 m-2 mr-auto ml-auto" role="alert">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                    <!-- dÃ©but photo -->
                    {{ form_start(formPhotoRotor) }}
                        <div class="row">
                            <table class="table table-bordered">
                                <tr  class="table-secondary">
                                    <th>Photo</th>
                                </tr>
                                <tr>
                                    <td>{{ form_widget(formPhotoRotor.libelle) }}
                                        {{ form_errors(formPhotoRotor.libelle) }}</td>
                                    <td width="100"><button class="btn btn-primary btn-sm" name="bouton8" value="ajouter"> Ajouter</button></td>
                                </tr>
                            </table>
                        </div>
                    {{ form_end(formPhotoRotor) }} 
                    <hr> 
                    <div class="row">
                       {% if parametre.photoRotors %}
                            <table class="table table-bordered">
                                <tr  class="table-secondary">
                                    <th>Photo</th>
                                </tr>
                                {% for item in parametre.photoRotors %}
                                    <tr>
                                        <td class="text-center"><img class="p-2" src="{{asset('/photo_rotor/'~ item.libelle)}}" height="400" width="400"></td>
                                        <td width="100" class="text-center"><a href="{{path('drop_ro_ph', {'id' : item.id })}}" onclick="return confirm('Voulez-vous valider ?')"><i class="fa fa-trash fa-2x text-danger"></i></a></td>
                                    </tr>                                    
                                {% endfor %}
                            </table>                                        
                        {% endif %}
                    </div>
                    <!-- /fin photo -->
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
