{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Photos</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_mecanique',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                </div>                
                <div class="x_content">
                    <!-- dÃ©but photo -->
                    {{ form_start(formPhotoExpertiseMecanique) }}
                        <div class="row">
                            <table class="table table-bordered">
                                <tr  class="table-secondary">
                                    <th>Libelle</th>
                                    <th>Photo</th>
                                </tr>
                                <tr>
                                    <td>{{ form_widget(formPhotoExpertiseMecanique.libelle) }}</td>
                                    <td>{{ form_widget(formPhotoExpertiseMecanique.image) }}</td>
                                    <td width="100"><button class="btn btn-primary btn-sm" name="bouton8" value="ajouter"> Ajouter</button></td>
                                </tr>
                            </table>
                        </div>
                    {{ form_end(formPhotoExpertiseMecanique) }} 
                    <hr>
                    <div class="row">
                        {% if parametre.photoExpertiseMecaniques %}
                            <table class="table table-bordered">
                                <tr  class="table-secondary">
                                    <th>Libelle</th>
                                    <th width="150">Image</th>
                                    <th width="20"></th>
                                </tr>
                                {% for item in parametre.photoExpertiseMecaniques %}
                                    <tr>
                                        <td>{{item.libelle}}</td>
                                        <td class="image"><img class="p-2" src="{{asset('/photo_expertise_mecanique/'~ item.image)}}" height="100"></td>
                                        <td><a href="{{path('delete_photo_expertise_mecanique', {'id' : item.id })}}" onclick="return confirm('Voulez-vous valider ?')"><i class="fa fa-trash fa-2x text-danger"></i></a></td>
                                    </tr>
                                {% endfor %} 
                            </table>                                        
                        {% endif %}
                    </div>
                    <!-- /fin photo -->
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
