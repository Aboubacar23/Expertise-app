{% extends 'base.html.twig' %}

{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h4>Expertise électrique après lavage du projet : {{ parametre.affaire.numAffaire }}</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Pont de diodes</h5>
                        </div>
                        <div class="col-md-6">
                            <ul class="nav navbar-right panel_toolbox">
                                <a href="{{path('app_expertise_electrique_apres_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div> 
                <div class="x_content">              
                    <div class="row">
                        <table class="table table-bordered table-striped">
                            <tr  class="table-secondary">
                                <th>Didoe</th>
                                <th>Tension</th>
                                <th>Conforme</th>
                                <th class="text-center" width="100px"></th>
                            </tr>
                            {{ form_start(form)}}
                            <tr>
                                <td>{{ form_widget(form.diode, {attr : { value : diode}}) }}</td>
                                <td>{{ form_widget(form.tension) }}</td>
                                <td>{{ form_widget(form.conforme) }}</td>
                                <td><button class="btn btn-primary btn-sm" name="bouton1" value="ajouter">Ajouter</button></td>
                            </tr>
                            {{ form_end(form)}}
                            {% if parametre.pontDiodes %}
                                {% for item in parametre.pontDiodes %}
                                    <tr>
                                        <td>{{item.diode}}</td>
                                        <td>{{item.tension}} V</td>
                                        {% if item.conforme ==  'Conforme' %}
                        <td style="color: green;">{{item.conforme}}</td>
                    {% else %}
                        <td style="color: red;">{{item.conforme}}</td>
                    {% endif %}
                                        <td class="text-center"><a href="{{path('app_pont_diode_edit', {'id' : parametre.id, 'idEq' : item.id })}}"><i class="fa fa-edit fa-2x text-primary"></i></a>  
                                        <a href="{{path('app_pont_diode_delete', {'id' : item.id })}}"><i class="fa fa-trash-o fa-2x text-danger"></i></a></td>   
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
