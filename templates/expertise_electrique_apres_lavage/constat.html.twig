{% extends 'base.html.twig' %}
{% block title %}Affaire{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left"><h4>Constact Expertise Électrique après lavage</h4>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">     
                    <ul class="nav navbar-right panel_toolbox">
                        <a href="{{path('app_expertise_electrique_apres_lavage',{'id' : parametre.id})}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-circle-left p-1"></i></a>
                    </ul>
                    <div class="clearfix"></div> 
                </div>
                <div class="x_content">
                    {{ form_start(formConstatElectriqueApresLavage) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="item form-group">
                                    <table class="table table-bordered">
                                        <tr class="table-primary">
                                            <th>Vérification</th>
                                            <th>Critères</th>
                                            <th>Observation</th>
                                            <th>Préconisations et conclusion</th>
                                            <th>Retenu</th>
                                            <th>Photo</th>
                                        </tr>
                                        <tr>
                                            <td>{{form_widget(formConstatElectriqueApresLavage.verification)}}</td>
                                            <td>{{form_widget(formConstatElectriqueApresLavage.critere)}}</td>
                                            <td>{{form_widget(formConstatElectriqueApresLavage.observation)}}</td>
                                            <td>{{form_widget(formConstatElectriqueApresLavage.preconisation_conclusion)}}</td>
                                            <td>{{form_widget(formConstatElectriqueApresLavage.retenu)}}</td>
                                            <td>{{form_widget(formConstatElectriqueApresLavage.photo)}}</td>
                                            <td><button class="btn btn-primary btn-sm" name="bouton6" value="ajouter"> Ajouter <i class="fa fa-save"></i></button></td>
                                        </tr>
                                        {% for item in parametre.constatElectriqueApresLavages %}
                                            <tr class="table-striped">
                                                <td>{{item.verification}}</td>
                                                <td>{{item.critere}}</td>
                                                <td>{{item.observation}}</td>
                                                <td>{{item.preconisationConclusion}}</td>
                                                <td>{{item.retenu}}</td>
                                                <td class="text-center image"><img src="{{asset('/photo_constat_electrique_apres_lavage/'~ item.photo)}}" alt="" height="75"></td>
                                                <td class="text-center"><a onclick="return confirm('Voulez-vous valider ?')" href="{{path('delete_constat_electrique_apres_lavage', {'id' :  item.id })}}"><i class="fa fa-trash-o fa-2x text-danger"></i></a></td>
                                            </tr>                                                    
                                        {% endfor %}
                                    </table>
                                </div>
                            </div>
                        </div>
                   {{ form_end(formConstatElectriqueApresLavage) }}                    
                </div>
            </div>
        </div>
    </div> 
</div>
{% endblock %}
