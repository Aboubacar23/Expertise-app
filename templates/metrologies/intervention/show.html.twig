{% extends 'base.html.twig' %}

{% block title %}Intervention{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Intervention : {{ intervention.numeroDa }} </h3>
        </div>
    </div>
    <div class="clearfix"></div>  <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <a class="btn btn-info btn-sm p-2" href="{{ path('app_intervention_print', {'id': intervention.id}) }}" target="_blank" >Imprimer <i class="fa fa-print fa-1x"></i></a>
                    <a class="btn btn-danger btn-sm p-2" href="{{ path('app_intervention_delete', {'id': intervention.id}) }}" onclick="return confirm('Voulez-vous confirmer ?')">Supprimer <i class="fa fa-trash fa-1x"></i></a>
                    <a class="btn btn-warning btn-sm p-2" href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" >Modifier <i class="fa fa-edit fa-1x"></i></a>
                    <a class="btn btn-secondary btn-sm p-2" href="{{ path('app_intervention_index') }}">Retour <i class="fa fa-arrow-left fa-1x"></i></a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table">
                        <tbody class="table-secondary">
                            <tr>
                                <th>Date DA</th>
                                <th>Date Envoi</th>
                                <th>Demandeur</th>
                                <th>Prestataire</th>
                            </tr>
                            <tr>
                                <td>{{ intervention.dateDa ? intervention.dateDa|date('d-m-Y') : '' }}</td>
                                <td>{{ intervention.dateEnvoi ? intervention.dateEnvoi|date('d-m-Y') : '' }}</td>
                                <td>{{ intervention.demandeur }}</td>
                                <td>{{ intervention.prestataire }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <table id="datatable" class="table table-striped table-hover table-sm table-bordered" style="width:100%">
                        <thead class="table-secondary">
                            <tr  class="table-secondary">
                                <th width="10%">Repère</th>
                                <th width="22%">Désignation</th>
                                <th width="16%">Marque</th>
                                <th width="16%">Type Intervention</th>
                                <th width="16%">Date Retour</th>
                                <th width="16%">Observation</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in intervention.linterventions %}
                            <tr> 
                                <td>{{item.appareil}}</td>
                                <td>{{item.designation}}</td>
                                <td>{{item.marque}}</td>
                                <td>{{item.typeIntervention}}</td>
                                <td>{{item.dateRetour ? item.dateRetour|date('d-m-Y') : '' }}</td>
                                <td>{{item.observation}}</td>
                            </tr>                                        
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>  
</div>
{% endblock %}
