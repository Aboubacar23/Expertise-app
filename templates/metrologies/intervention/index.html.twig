{% extends 'base.html.twig' %}

{% block title %}Intervention index{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
        <h3>Gestion Intervention</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
            <h2>Listes des interventions</h2>
            <ul class="nav navbar-right panel_toolbox">
                <a href="{{path('app_intervention_new')}}" class="btn btn-primary btn-sm p-2">Ajouter<i class="fa fa-plus-circle p-1"></i></a>
                <a href="{{path('app_metrologie')}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-left p-1"></i></a>
            </ul>
            <div class="clearfix"></div>
            </div>
            <div class="x_content">
                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="container alert alert-success p-2" role="alert">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashbag.get('danger') %}
                    <div class="container alert alert-danger p-2" role="alert">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-hover" style="width:100%">
                                <thead class="table-secondary">
                                    <tr>
                                        <th width="2">N°</th>
                                        <th>Numero DA</th>
                                        <th>Date DA</th>
                                        <th>Date Envoi</th>
                                        <th>Demandeur</th>
                                        <th>Prestataire</th>
                                        <th width="200" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set i = 0 %}
                                    {% for intervention in interventions %}
                                        {% set i = i + 1 %}
                                        <tr>
                                            <td>{{ i }}</td>
                                            <td>{{ intervention.numeroDa }}</td>
                                            <td>{{ intervention.dateDa ? intervention.dateDa|date('Y-m-d') : '' }}</td>
                                            <td>{{ intervention.dateEnvoi ? intervention.dateEnvoi|date('Y-m-d') : '' }}</td>
                                            <td>{{ intervention.demandeur }}</td>
                                            <td>{{ intervention.prestataire }}</td>
                                            <td class="text-center">
                                                <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye fa-2x"></i></a>
                                                <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit fa-2x"></i></a>
                                                <a href="{{ path('app_intervention_delete', {'id': intervention.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');"><i class="fa fa-trash-o fa-2x" aria-hidden="true"></i></a>
                                                <a href="{{ path('app_intervention_print', {'id': intervention.id}) }}" class="btn btn-info btn-sm" target="_blank"><i class="fa fa-print fa-2x" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">La table est vide </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>
{% endblock %}
