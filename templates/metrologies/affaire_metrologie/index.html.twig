{% extends 'base.html.twig' %}

{% block title %}AffaireMetrologie index{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
        <h3>Gestion des affaires</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
            <h2>Listes des affaires</h2>
            <ul class="nav navbar-right panel_toolbox">
                <a href="{{path('app_affaire_metrologie_new')}}" class="btn btn-primary btn-sm p-2">Ajouter<i class="fa fa-plus-circle p-1"></i></a>
                <a href="{{path('app_metrologie')}}" class="btn btn-secondary btn-sm p-2">Retour<i class="fa fa-arrow-left p-1"></i></a>
            </ul>
            <div class="clearfix"></div>
            </div>
            <div class="x_content">
                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="container alert alert-success p-2" role="alert">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashbag.get('danger') %}
                    <div class="container alert alert-danger p-2" role="alert">
                        {{ flash_message }}
                    </div>
                {% endfor %} 
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-hover" style="width:100%">
                                <thead class="table-secondary">
                                    <tr>
                                        <th width="2">NÂ°</th>
                                        <th>Num Affaire</th>
                                        <th>Nom Affaire</th>
                                        <th>Chef Chantier</th>
                                        <th>Observation</th>
                                        <th width="150" class="text-center"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set i = 0 %}
                                    {% for affaire_metrologie in affaire_metrologies %}
                                        {% set i = i + 1 %}
                                        <tr>
                                            <td>{{ i }}</td>
                                            <td>{{ affaire_metrologie.numAffaire }}</td>
                                            <td>{{ affaire_metrologie.nomAffaire }}</td>
                                            <td>{{ affaire_metrologie.chefChantier }}</td>
                                            <td>{{ affaire_metrologie.observation }}</td>
                                            <td class="text-center">
                                                <a href="{{ path('app_affaire_metrologie_show', {'id': affaire_metrologie.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-eye fa-2x"></i></a>
                                                <a href="{{ path('app_affect_aff_new', {'id': affaire_metrologie.id}) }}" class="btn btn-success btn-sm" target="_blank"><i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    {% else %} 
                                        <tr>
                                            <td colspan="7">La table est vide </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>
{% endblock %}
