{% extends 'base.html.twig' %}

{% block title %}affectation{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Affectation : {{ affectation.affaire }} </h3>
        </div>
    </div>
    <div class="clearfix"></div>  <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <a class="btn btn-info btn-sm p-2" href="{{ path('app_affectation_print', {'id': affectation.id}) }}" target="_blank" >Imprimer <i class="fa fa-print fa-1x"></i></a>
                    <a class="btn btn-danger btn-sm p-2" href="{{ path('app_affectation_delete', {'id': affectation.id}) }}" onclick="return confirm('Voulez-vous confirmer ?')">Supprimer <i class="fa fa-trash fa-1x"></i></a>
                    <a class="btn btn-warning btn-sm p-2" href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" >Modifier <i class="fa fa-edit fa-1x"></i></a>
                    <a class="btn btn-secondary btn-sm p-2" href="{{ path('app_affectation_index') }}">Retour <i class="fa fa-arrow-left fa-1x"></i></a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Numéro Affaire</th>
                                <th>Nom Affaire</th>
                                <th>Service Affectation</th>
                                <th>Date Sortie</th>
                                <th>Sortie Par</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{ affectation.affaire }}</td>
                                <td>{{ affectation.nomAffaire }}</td>
                                <td>{{ affectation.serviceAffectation }}</td>
                                <td>{{ affectation.dateSortie ? affectation.dateSortie|date('d-m-Y') : '' }}</td>
                                <td>{{ affectation.sortiePar }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-bordered table-striped">
                        <tr  class="table-secondary">
                            <th width="10%">Repère</th>
                            <th width="22%">Désignation</th>
                            <th width="16%">Type</th>
                            <th width="16%">Numéro Série</th>
                            <th width="16%">Date Retour</th>
                            <th width="16%">Observation</th>
                        </tr>
                        {% for item in affectation.laffectations %}
                            <tr> 
                                <td>{{item.appareil}}</td>
                                <td>{{item.designation}}</td>
                                <td>{{item.type}}</td>
                                <td>{{item.numeroSerie}}</td>
                                <td>{{item.dateRetour ? item.dateRetour|date('d-m-Y') : '' }}</td>
                                <td>{{item.observation}}</td>
                            </tr>                                        
                        {% endfor %} 
                    </table>
                </div>
            </div>
        </div>
    </div>  
</div>
{% endblock %}
