<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bon Intervention</title>
</head>
<style>
table{
    width: 100%;
}
.table { 
    width: 100%; 
    border-collapse: collapse; 
    }    
.tr:nth-of-type(odd) { 
    background: #eee; 
    }

.th { 
    background: #0063AF; 
    color: white; 
    font-weight: bold; 
    text-align: center; 
}

.td, .th { 
    padding: 10px; 
    border: 1px solid #0063AF; 
    font-size: 12px;
    }
td{
    padding: 10px;
}
hr, .p{
    border-bottom: 3px solid #0063AF;
}
h2{
    text-align: center;
    text-transform: uppercase;
    font-size: x-large;
    font-family: serif;
    color: #0063AF;
}   
footer {
        position: fixed; 
        bottom: -60px; 
        left: 0px; 
        right: 0px;
        height: 100px; 
        text-align: center;
        line-height: 35px;
    }
footer:after {
    content:"Page " counter(page) " / " counter(pages);
    margin-left: 600px;
    position: fixed; 
    bottom: -80px; 
    left: 0px; 
    right: 0px;
    height: 100px; 
}

</style>
<body>
    <h2>Bon de Retour da n° {{ retourIntervention.intervention.numeroDa}}</h2>
    <p class="p"></p>
    <div class="header">
        <table>
            <tr>
                <th>Prestataire : </th>
                <td>{{ retourIntervention.intervention.prestataire }}</td>
                <th>Demandeur : </th>
                <td>{{ retourIntervention.intervention.demandeur }}</td>
            </tr>
            <tr>
                <th>Date de DA : </th>
                <td>{{ retourIntervention.intervention.dateDa ? retourIntervention.intervention.dateDa|date('d-m-Y') : '' }}</td>
                <th>Date d'envoi : </th>
                <td>{{ retourIntervention.intervention.dateEnvoi ? retourIntervention.intervention.dateEnvoi|date('d-m-Y') : '' }}</td>
            </tr>
        </table>
    </div>
    <p class="p"></p>
    <div class="body">
        <table class="table">
            <thead>
                <tr  class="tr">
                    <th class="th" width="20%">Repère</th>
                    <th class="th" width="15%">Appareil</th>
                    <th class="th" width="15%">Type Intervention</th>
                    <th class="th" width="15%">Date Retour</th>
                    <th class="th" width="15%">Date Etalonnage</th>
                    <th class="th" width="15%">Numéro Certificat</th>
                    <th class="th" width="35%">Observation</th>
                </tr>
            </thead>
            <tbody>
                {% for item in retourIntervention.intervention.linterventions %}
                    <tr> 
                        <td class="td">{{item.appareil}}</td>
                        <td class="td">{{item.designation}}</td>
                        <td class="td">{{item.typeIntervention}}</td>
                        <td class="td">{{item.dateRetour ? item.dateRetour|date('d-m-Y') : '' }}</td>
                        <td class="td">{{item.dateEtalonnage ? item.dateEtalonnage|date('d-m-Y') : '' }}</td>
                        <td class="td">{{item.numeroCertificat}}</td>
                        <td class="td">{{item.observation}}</td>
                    </tr>                                        
                {% endfor %} 
            </tbody>
        </table>
    </div>
</body>
</html>