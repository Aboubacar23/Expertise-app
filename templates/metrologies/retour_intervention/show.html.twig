{% extends 'base.html.twig' %}

{% block title %}RetourIntervention{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Retour Intervention : {{ retour_intervention.intervention.numeroDa }} </h3>
        </div>
    </div>
    <div class="clearfix"></div>  <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <a class="btn btn-info btn-sm p-2" href="{{ path('app_intervention_retour_print', {'id': retour_intervention.id}) }}" target="_blank" >Imprimer <i class="fa fa-print fa-1x"></i></a>
                    <a class="btn btn-danger btn-sm p-2" href="{{ path('app_retour_intervention_delete', {'id': retour_intervention.id}) }}" onclick="return confirm('Voulez-vous confirmer ?')">Supprimer <i class="fa fa-trash fa-1x"></i></a>
                    <a class="btn btn-warning btn-sm p-2" href="{{ path('app_retour_intervention_edit', {'id': retour_intervention.id}) }}" >Modifier <i class="fa fa-edit fa-1x"></i></a>
                    <a class="btn btn-secondary btn-sm p-2" href="{{ path('app_retour_intervention_index') }}">Retour <i class="fa fa-arrow-left fa-1x"></i></a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table  class="table table-bordered table-striped">
                        <tbody>
                             <tr>
                                <th>Date DA</th>
                                <th>Date Envoi</th>
                                <th>Demandeur</th>
                                <th>Prestataire</th>
                            </tr>
                            <tr>
                               <td>{{ retour_intervention.intervention.dateDa ? retour_intervention.intervention.dateDa|date('Y-m-d') : '' }}</td>
                               <td>{{ retour_intervention.intervention.dateEnvoi ? retour_intervention.intervention.dateEnvoi|date('Y-m-d') : '' }}</td>
                               <td>{{ retour_intervention.intervention.demandeur }}</td>
                               <td>{{ retour_intervention.intervention.prestataire }}</td>
                           </tr>
                        </tbody>
                    </table>
                    <br>
                    <table id="datatable" class="table table-striped table-hover">
                        <tr  class="table-secondary">
                            <th width="2%">N°</th>
                            <th width="10%">Repère</th>
                            <th width="10%">Désignation</th>
                            <th width="10%">Marque</th>
                            <th width="10%">Type</th>
                            <th width="10%">Type Intervention</th>
                            <th width="10%">Date Retour</th>
                            <th width="10%">Date Etalonnage</th>
                            <th width="10%">N° Certificat</th>
                            <th width="10%">Etat</th>
                            <th width="5%" class="text-center">Action</th>
                        </tr>
                        {% set i = 0 %}
                        {% for item in retour_intervention.intervention.linterventions %}
                            {% set i = i+1 %}
                            <tr> 
                                <td>{{i}}</td>
                                <td>{{item.appareil}}</td>
                                <td>{{item.designation}}</td>
                                <td>{{item.marque}}</td>
                                <td>{{item.appareil.type}}</td>
                                <td>{{item.typeIntervention}}</td>
                                <td>{{item.dateRetour ? item.dateRetour|date('d-m-Y') : '' }}</td>
                                <td>{{item.dateEtalonnage ? item.dateEtalonnage|date('d-m-Y') : '' }}</td>
                                <td>{{item.appareil.numeroCertificat}}</td> 
                                <td>{{item.appareil.etat}}</td> 
                                <td class="text-center"><a href="{{ path('app_retour_intervention_app_edit', {'id': item.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit fa-1x"></i></a></td>
                            </tr>                                        
                        {% endfor %} 
                    </table>
                </div>
            </div>
        </div>
    </div>  
</div>

{% endblock %} 
