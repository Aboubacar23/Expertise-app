{% extends 'base.html.twig' %}

{% block title %}RetourAffectation{% endblock %}

{% block body %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Retour affectation : {{ retour_affectation.affectation }} </h3>
        </div>
    </div>
    <div class="clearfix"></div>  <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <a class="btn btn-info btn-sm p-2" href="{{ path('app_affectation_retour_print', {'id': retour_affectation.id}) }}" target="_blank" >Imprimer <i class="fa fa-print fa-1x"></i></a>
                    <a class="btn btn-danger btn-sm p-2" href="{{ path('app_retour_affectation_delete', {'id': retour_affectation.id}) }}" onclick="return confirm('Voulez-vous confirmer ?')">Supprimer <i class="fa fa-trash fa-1x"></i></a>
                    <a class="btn btn-warning btn-sm p-2" href="{{ path('app_retour_affectation_edit', {'id': retour_affectation.id}) }}" >Modifier <i class="fa fa-edit fa-1x"></i></a>
                    <a class="btn btn-secondary btn-sm p-2" href="{{ path('app_retour_affectation_index') }}">Retour <i class="fa fa-arrow-left fa-1x"></i></a>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table  class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th>Numero Affaire</th>
                                <th>Nom Affaire</th>
                                <th>Service Affectation</th>
                                <th>Retour Saisie par </th>
                                <th>Date Retour </th>
                            </tr>
                            <tr>
                                <td>{{ retour_affectation.affectation}}</td>
                                <td>{{ retour_affectation.affectation.affaire.nomAffaire}}</td>
                                <td>{{ retour_affectation.affectation.serviceAffectation}}</td>
                                <td>{{ retour_affectation.retourSaisiePar}}</td>
                                <td>{{ retour_affectation.dateSortie ? retour_affectation.dateSortie|date('Y-m-d') : '' }}</td>
                            </tr>
                        </tbody> 
                    </table>
                    <br>
                    <table id="datatable" class="table table-striped table-hover">
                        <tr  class="table-secondary">
                            <th width="2%">N°</th>
                            <th width="10%">Repère</th>
                            <th width="10%">Désignation</th>
                            <th width="10%">Type</th>
                            <th width="10%">Numero Série</th>
                            <th width="10%">Date Retour</th>
                            <th width="10%">Etat</th>
                            <th width="10%">Observation</th>
                            <th width="5%" class="text-center">Action</th>
                        </tr> 
                        {% set i = 0 %}
                        {% for item in retour_affectation.affectation.laffectations %}
                            {% set i = i+1 %}
                            <tr> 
                                <td>{{i}}</td>
                                <td>{{item.appareil}}</td>
                                <td>{{item.designation}}</td>
                                <td>{{item.type}}</td>
                                <td>{{item.numeroSerie}}</td>
                                <td>{{item.dateRetour ? item.dateRetour|date('d-m-Y') : '' }}</td>
                                <td>{{item.etat}}</td> 
                                <td>{{item.observation}}</td> 
                                <td class="text-center"><a href="{{ path('app_retour_affectation_app_edit', {'id': item.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit fa-1x"></i></a></td>
                            </tr>                                        
                        {% endfor %} 
                    </table>
                </div>
            </div>
        </div>
    </div>  
</div>

    
{% endblock %}
