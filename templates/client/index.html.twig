{% extends 'base.html.twig' %}

{% block title %}Liste client{% endblock %}

{% block body %}   
<div class="">
    <div class="page-title">
        <div class="title_left">
        <h3>Gestion Client</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
            <h2>Listes des clients</h2>
            <ul class="nav navbar-right panel_toolbox">
                <a href="{{path('app_client_new')}}" class="btn btn-primary btn-sm p-2">Ajouter<i class="fa fa-plus-circle p-1"></i></a>
            </ul>
            <div class="clearfix"></div>
            </div>
            <div class="x_content">
                {% for flash_message in app.session.flashbag.get('success') %}
                    <div class="container alert alert-success p-2" role="alert">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="datatable" class="table table-striped table-hover" style="width:100%">
                                <thead class="table-secondary">
                                    <tr>
                                        <th width="2">N°</th>
                                        <th>Nom</th>
                                        <th>Site</th>
                                        <th>Adresse</th>
                                        <th>Ville</th>
                                        <th>Contact</th>
                                        <th width="150" class="text-center">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set i = 0 %}
                                    {% for client in clients %}
                                        {% set i = i + 1 %}
                                        <tr>
                                            <td>{{ i }}</td>
                                            <td>{{ client.nom }}</td>
                                            <td>{{ client.site }}</td>
                                            <td>{{ client.adresse }}</td>
                                            <td>{{ client.ville }}</td>
                                            <td>{{ client.contact }}</td>
                                            <td class="text-center">
                                                <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-info btn-sm"><i class="fa fa-folder"></i></a>
                                                <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                                                <a href="{{ path('app_client_delete', {'id': client.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de bien vouloir supprimer cet élément?');"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">La table des clients est vide </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>
{% endblock %}
